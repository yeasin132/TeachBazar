<script>
    var rolePermissionsData = {};
    @{
        var roles = ViewBag.Roles as IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole> ?? new List<Microsoft.AspNetCore.Identity.IdentityRole>();
        var rolePermissions = ViewBag.RolePermissions as IEnumerable<TechBazar.Models.RolePermission> ?? new List<TechBazar.Models.RolePermission>();

        foreach (var role in roles)
        {
            var rolePerms = rolePermissions.Where(rp => rp.RoleId == role.Id).Select(rp => rp.PermissionId).ToList();
            <text>rolePermissionsData['@role.Id'] = @Json.Serialize(rolePerms);</text>
        }
    }

    function loadRolePermissions() {
        var roleId = document.getElementById('roleSelect').value;
        var permissionsSection = document.getElementById('permissionsSection');
        var selectedRoleId = document.getElementById('selectedRoleId');
        var roleTitle = document.getElementById('roleTitle');

        if (roleId === '') {
            permissionsSection.style.display = 'none';
            return;
        }

        selectedRoleId.value = roleId;

        // Find the selected role name
        var roleSelect = document.getElementById('roleSelect');
        var selectedOption = roleSelect.options[roleSelect.selectedIndex];
        var roleName = selectedOption.text;

        roleTitle.textContent = roleName + ' Role Permissions';

        // Load current permissions for this role
        var rolePermissions = rolePermissionsData[roleId] || [];

        // Check the appropriate checkboxes
        document.querySelectorAll('.permission-checkbox').forEach(function(checkbox) {
            var permissionId = parseInt(checkbox.id.replace('permission-', ''));
            checkbox.checked = rolePermissions.includes(permissionId);
        });

        permissionsSection.style.display = 'block';
    }

    function clearSelection() {
        document.querySelectorAll('.permission-checkbox').forEach(function(checkbox) {
            checkbox.checked = false;
        });
    }

    function togglePermission(permissionId) {
        var checkbox = document.getElementById('permission-' + permissionId);
        if (checkbox) {
            checkbox.checked = !checkbox.checked;
        }
    }
</script>

<script>
    function assignProductPermissions(roleId) {
        // Assign Products.Create, Products.Update, and Products.Delete permissions to Manager role
        var token = document.querySelector('input[name="__RequestVerificationToken"]').value;
        var promises = [];

        if ('@createPermissionId' !== '') {
            promises.push(fetch('/Permissions/AssignPermission', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    roleId: roleId,
                    permissionId: '@createPermissionId'
                })
            }));
        }

        if ('@updatePermissionId' !== '') {
            promises.push(fetch('/Permissions/AssignPermission', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    roleId: roleId,
                    permissionId: '@updatePermissionId'
                })
            }));
        }

        if ('@deletePermissionId' !== '') {
            promises.push(fetch('/Permissions/AssignPermission', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/x-www-form-urlencoded',
                    'RequestVerificationToken': token
                },
                body: new URLSearchParams({
                    roleId: roleId,
                    permissionId: '@deletePermissionId'
                })
            }));
        }

        Promise.all(promises).then(() => {
            location.reload();
        }).catch(error => {
            console.error('Error assigning permissions:', error);
            location.reload();
        });
    }
</script>

