@model IEnumerable<TechBazar.Models.Permission>

@{
    ViewData["Title"] = "Permissions Management";
}

<div class="container-fluid mt-4">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h1 class="text-primary mb-2">
                        <i class="fas fa-shield-alt me-2"></i>Permissions Management
                    </h1>
                    <p class="text-muted mb-0">Manage system permissions and access controls</p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Create New Permission
                    </a>
                    <a asp-action="ManageRoles" class="btn btn-outline-primary btn-lg">
                        <i class="fas fa-users-cog me-2"></i>Manage Roles
                    </a>
                    <a asp-action="UserPermissions" class="btn btn-outline-info btn-lg">
                        <i class="fas fa-user-check me-2"></i>User Permissions
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Instructions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info">
                <h5><i class="fas fa-info-circle me-2"></i>Quick Guide:</h5>
                <ul class="mb-0">
                    <li><strong>Create New Permission:</strong> Add a new permission to the system</li>
                    <li><strong>Manage Roles:</strong> Assign permissions to different user roles</li>
                    <li><strong>User Permissions:</strong> View and manage individual user permissions</li>
                    <li><strong>Edit:</strong> Modify permission details</li>
                    <li><strong>Delete:</strong> Remove permission from the system</li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Alert Messages -->
    @if (TempData["SuccessMessage"] is not null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] is not null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Permissions Grid -->
    <div class="row">
        @foreach (var permission in Model)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card permission-card h-100 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="card-title mb-0">
                            <i class="fas fa-shield-alt text-primary me-2"></i>@permission.Name
                        </h5>
                    </div>

                    <div class="card-footer bg-transparent">
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-primary btn-lg flex-fill" onclick="editPermission(@permission.Id)">
                                <i class="fas fa-edit me-1"></i>Edit Permission
                            </a>
                            <button class="btn btn-danger btn-lg flex-fill" onclick="deletePermission(@permission.Id)">
                                <i class="fas fa-trash me-1"></i>Delete Permission
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.Count() == 0)
    {
        <div class="row">
            <div class="col-12">
                <div class="text-center py-5">
                    <i class="fas fa-shield-alt fa-4x text-muted mb-3"></i>
                    <h3 class="text-muted">No Permissions Found</h3>
                    <p class="text-muted mb-4">There are currently no permissions in the system.</p>
                    <a asp-action="Create" class="btn btn-primary btn-lg">
                        <i class="fas fa-plus me-2"></i>Create First Permission
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .permission-card {
        transition: transform 0.2s, box-shadow 0.2s;
        border: none;
        border-radius: 10px;
    }

    .permission-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15) !important;
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,0.125);
        border-radius: 10px 10px 0 0 !important;
    }

    .card-footer {
        border-top: 1px solid rgba(0,0,0,0.125);
        border-radius: 0 0 10px 10px !important;
    }

    .btn {
        border-radius: 6px;
    }

    .badge {
        font-size: 0.75em;
    }

    .alert {
        border-radius: 8px;
        border: none;
    }

    .fas {
        opacity: 0.8;
    }

    /* Responsive adjustments */
    @@media (max-width: 768px) {
        .d-flex.justify-content-between {
            flex-direction: column;
            gap: 1rem;
        }

        .d-flex.gap-2 {
            flex-direction: column;
            width: 100%;
        }

        .btn {
            width: 100%;
        }
    }

    @@media (max-width: 576px) {
        .card-body .row .col-6 {
            margin-bottom: 1rem;
        }
    }
</style>

