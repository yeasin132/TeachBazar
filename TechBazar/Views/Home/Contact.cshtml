@{
    ViewData["Title"] = "Contact - TechBazaar";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8">
            <h1>Contact Us</h1>
            <p class="lead">Have questions? We'd love to hear from you.</p>

            <form method="post">
                <div class="mb-3">
                    <label for="name" class="form-label">Name</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>
                <div class="mb-3">
                    <label for="message" class="form-label">Message</label>
                    <textarea class="form-control" id="message" name="message" rows="5" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Send Message</button>
            </form>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Contact Information</h5>
                    <p><i class="fas fa-map-marker-alt"></i> 123 Tech Street, Tech City, TC 12345</p>
                    <p><i class="fas fa-phone"></i> +1 (555) 123-4567</p>
                    <p><i class="fas fa-envelope"></i> info@techbazaar.com</p>
                    <p><i class="fas fa-clock"></i> Mon-Fri: 9AM-6PM</p>
                </div>
            </div>
        </div>
    </div>
</div>