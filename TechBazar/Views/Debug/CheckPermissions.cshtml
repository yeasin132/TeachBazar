@{
    ViewData["Title"] = "Check Permissions";
}

<div class="container mt-4">
    <h2>Permission Debug Information</h2>

    <div class="row">
        <div class="col-md-6">
            <h4>Users and Their Permissions</h4>
            @foreach (var user in ViewBag.Users)
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <strong>@user.Email</strong>
                        <br />
                        <small class="text-muted">Roles: @string.Join(", ", ViewBag.UserRoles[user.Email])</small>
                    </div>
                    <div class="card-body">
                        <h6>Permissions:</h6>
                        @if (ViewBag.UserPermissions.ContainsKey(user.Email) && ViewBag.UserPermissions[user.Email].Any())
                        {
                            <ul>
                                @foreach (var permission in ViewBag.UserPermissions[user.Email])
                                {
                                    <li>@permission</li>
                                }
                            </ul>
                        }
                        else
                        {
                            <p class="text-muted">No permissions assigned</p>
                        }
                    </div>
                </div>
            }
        </div>

        <div class="col-md-6">
            <h4>All Permissions</h4>
            <ul class="list-group">
                @foreach (var permission in ViewBag.Permissions)
                {
                    <li class="list-group-item">
                        <strong>@permission.Name</strong>
                        <br />
                        <small class="text-muted">@permission.Description</small>
                    </li>
                }
            </ul>

            <h4 class="mt-4">Role-Permission Assignments</h4>
            <ul class="list-group">
                @foreach (var rp in ViewBag.RolePermissions)
                {
                    <li class="list-group-item">
                        <strong>@rp.Role.Name</strong> â†’ @rp.Permission.Name
                    </li>
                }
            </ul>
        </div>
    </div>
</div>


