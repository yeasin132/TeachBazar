﻿@using Microsoft.AspNetCore.Identity
@using TechBazar.Models
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechBazaar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        .navbar-brand {
            font-weight: bold;
        }

        .product-card {
            transition: transform 0.2s;
        }

            .product-card:hover {
                transform: translateY(-5px);
            }

        .category-badge {
            cursor: pointer;
        }

        .hero-section {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            padding: 4rem 0;
        }

        /* custom "graywhite" background for navbar */
        .bg-graywhite {
            background-color: #f8f9fa !important;
        }

        /* Ensure logo doesn't get too large */
        .navbar-logo {
            height: 40px;
            width: auto;
            max-width: 150px;
        }

        /* Better dropdown styling */
        .dropdown-menu {
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .dropdown-item:hover {
            background-color: #f8f9fa;
        }
    </style>
</head>
@inject UserManager<ApplicationUser> UserManager
@{
        var isAuthenticated = User.Identity.IsAuthenticated;
        var isAdmin = false;
        var isManager = false;

        if (isAuthenticated)
        {
                var user = await UserManager.GetUserAsync(User!);
                if (user != null)
                {
                        isAdmin = await UserManager.IsInRoleAsync(user, "Admin");
                        isManager = await UserManager.IsInRoleAsync(user, "Manager");
                }
        }
}

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-graywhite">
            <div class="container">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    <img src="/images/logo-TechBazar.jpeg" alt="TechBazaar Logo" class="navbar-logo" />
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Products" asp-action="Index">Products</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Categories" asp-action="Index">Categories</a>
                            </li>
                        }
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Contact">Contact</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="languageDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-globe"></i> Language
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                                <li><a class="dropdown-item" href="#" onclick="setLanguage(1)">English</a></li>
                                <li><a class="dropdown-item" href="#" onclick="setLanguage(2)">বাংলা (Bangla)</a></li>
                                <li><a class="dropdown-item" href="#" onclick="setLanguage(3)">العربية (Arabic)</a></li>
                            </ul>
                        </li>

                        @if (isAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Profile">
                                    <i class="fas fa-user"></i> @User.Identity?.Name
                                </a>
                            </li>

                            @if (isAdmin || isManager)
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle" href="#" id="managementDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-cog"></i> Management
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="managementDropdown">
                                        <li>
                                            <a class="dropdown-item" asp-controller="Products" asp-action="AdminAdd">
                                                <i class="fas fa-plus"></i> Add Product
                                            </a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-controller="Products" asp-action="AdminManage">
                                                <i class="fas fa-edit"></i> Manage Products
                                            </a>
                                        </li>
                                        @if (isAdmin)
                                        {
                                            <li><hr class="dropdown-divider"></li>
                                            <li>
                                                <a class="dropdown-item" asp-controller="Permissions" asp-action="Index">
                                                    <i class="fas fa-shield-alt"></i> Admin Access
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                </li>
                            }

                            <li class="nav-item">
                                <form class="form-inline" asp-controller="Account" asp-action="Logout" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="nav-link btn btn-link border-0">
                                        <i class="fas fa-sign-out-alt"></i> Logout
                                    </button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Register">
                                    <i class="fas fa-user-plus"></i> Register
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="fas fa-sign-in-alt"></i> Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main>
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show m-0" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show m-0" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @RenderBody()
    </main>

    <footer class="bg-dark text-light py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-4">
                    <h5>TechBazaar</h5>
                    <p>Your one-stop shop for the latest technology products and accessories.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a asp-controller="Home" asp-action="Index" class="text-light">Home</a></li>
                        <li><a asp-controller="Products" asp-action="Index" class="text-light">Products</a></li>
                        <li><a asp-controller="Categories" asp-action="Index" class="text-light">Categories</a></li>
                        <li><a asp-controller="Home" asp-action="About" class="text-light">About Us</a></li>
                        <li><a asp-controller="Home" asp-action="Contact" class="text-light">Contact</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contact Info</h5>
                    <p><i class="fas fa-map-marker-alt"></i> 123 Tech Street, City</p>
                    <p><i class="fas fa-phone"></i> +1 (555) 123-4567</p>
                    <p><i class="fas fa-envelope"></i> info@techbazaar.com</p>
                </div>
            </div>
            <hr class="my-4">
            <div class="text-center">
                <p>&copy; 2024 TechBazaar. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        function setLanguage(languageId) {
            document.cookie = "SelectedLanguage=" + languageId + "; path=/; max-age=31536000"; // 1 year
            location.reload();
        }
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
