@{
    ViewData["Title"] = "Verify OTP - TechBazar";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Verify OTP</h3>
                </div>
                <div class="card-body">
                    <!-- Display messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success">
                            @TempData["SuccessMessage"]
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger">
                            @TempData["ErrorMessage"]
                        </div>
                    }
                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger">
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        </div>
                    }

                    <form asp-controller="Account" asp-action="VerifyOTP" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-3">
                            <label for="otpInput" class="form-label">Enter OTP</label>
                            <input type="text" class="form-control" id="otpInput" name="otpInput" required maxlength="6" placeholder="Enter 6-digit OTP">
                            <small class="form-text text-muted">Check your email for the OTP code.</small>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Verify OTP</button>
                    </form>

                    <div class="text-center mt-3">
                        <p>Didn't receive OTP? <a asp-controller="Account" asp-action="Register">Try again</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>